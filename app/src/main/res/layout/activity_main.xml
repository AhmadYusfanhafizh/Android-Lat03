<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD7aa"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btArsenal"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Arsenal"
        app:layout_constraintBottom_toTopOf="@+id/btBarcelona"
        app:layout_constraintStart_toStartOf="@+id/btBarcelona"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btPorto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Porto"
        app:layout_constraintEnd_toEndOf="@+id/btBarcelona"
        app:layout_constraintTop_toTopOf="@+id/btArsenal"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btBarcelona"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:background="#FFD700"
        android:text="Barcelona"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,MissingConstraints" />

    <Button
        android:id="@+id/btColoColo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Colo-Colo"
        app:layout_constraintBottom_toBottomOf="@+id/btBocaJr"
        app:layout_constraintStart_toStartOf="@+id/btBarcelona"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btBocaJr"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Boca Junior"
        app:layout_constraintTop_toBottomOf="@+id/btBarcelona"
        tools:layout_editor_absoluteX="125dp"
        tools:ignore="HardcodedText,MissingConstraints" />

    <Button
        android:id="@+id/btFiorentina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fiorentina"
        app:layout_constraintBottom_toBottomOf="@+id/btBocaJr"
        app:layout_constraintEnd_toEndOf="@+id/btBarcelona"
        tools:ignore="HardcodedText" />
</androidx.constraintlayout.widget.ConstraintLayout>